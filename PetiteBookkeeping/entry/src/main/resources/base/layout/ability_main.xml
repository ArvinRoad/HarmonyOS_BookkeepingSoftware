<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:id="$+id:dl_title"
        ohos:height="90vp"
        ohos:background_element="#FFF0F5"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="horizontal">
        <Image
            ohos:height="80vp"
            ohos:width="80vp"
            ohos:image_src="$media:icon"/>
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text_size="30vp"
            ohos:text_color="#DDA0DD"
            ohos:text="娇娇记账本"/>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:id="$+id:cl_content"
        ohos:height="0vp"
        ohos:weight="1"
        ohos:width="match_parent"
        ohos:orientation="horizontal">

        <DirectionalLayout
            ohos:id="$+id:dl_left"
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:weight="3"
            ohos:alignment="center"
            ohos:background_element="#F0FFF0"
            ohos:orientation="vertical">

            <RadioContainer
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:alignment="horizontal_center"
                ohos:orientation="vertical">
                <RadioButton
                    ohos:id="$+id:rbth_shopping"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:text_size="25fp"
                    ohos:text_color="#FFB6C1"
                    ohos:padding="5vp"
                    ohos:top_margin="20vp"
                    ohos:background_element="$graphic:background_ability_radio"
                    ohos:text="购物"/>
                <RadioButton
                    ohos:id="$+id:rbth_eat"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:text_size="25fp"
                    ohos:text_color="#66CDAA"
                    ohos:padding="5vp"
                    ohos:top_margin="10vp"
                    ohos:background_element="$graphic:background_ability_radio"
                    ohos:text="吃吃"/>
                <RadioButton
                    ohos:id="$+id:rbth_beauty"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:text_size="25fp"
                    ohos:text_color="#DA70D6"
                    ohos:padding="5vp"
                    ohos:top_margin="10vp"
                    ohos:background_element="$graphic:background_ability_radio"
                    ohos:text="美妆"/>
                <RadioButton
                    ohos:id="$+id:rbth_traffic"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:text_size="25fp"
                    ohos:text_color="#696969"
                    ohos:padding="5vp"
                    ohos:top_margin="10vp"
                    ohos:background_element="$graphic:background_ability_radio"
                    ohos:text="交通"/>
                <RadioButton
                    ohos:id="$+id:rbth_gift"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:text_size="25fp"
                    ohos:text_color="#FF4500"
                    ohos:padding="5vp"
                    ohos:top_margin="10vp"
                    ohos:background_element="$graphic:background_ability_radio"
                    ohos:text="礼金"/>
                <RadioButton
                    ohos:id="$+id:rbth_friend"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:text_size="25fp"
                    ohos:text_color="#00CED1"
                    ohos:padding="5vp"
                    ohos:top_margin="10vp"
                    ohos:background_element="$graphic:background_ability_radio"
                    ohos:text="请客"/>
                <RadioButton
                    ohos:id="$+id:rbth_borrow"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:text_size="25fp"
                    ohos:text_color="#696969"
                    ohos:padding="5vp"
                    ohos:top_margin="10vp"
                    ohos:background_element="$graphic:background_ability_radio"
                    ohos:text="借贷"/>

            </RadioContainer>

        </DirectionalLayout>

        <DirectionalLayout
            ohos:id="$+id:dl_right"
            ohos:height="match_parent"
            ohos:width="0vp"
            ohos:weight="7"
            ohos:alignment="horizontal_center"
            ohos:orientation="vertical">

            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:top_margin="20vp"
                ohos:orientation="horizontal">
                <Image
                    ohos:height="40vp"
                    ohos:width="40vp"
                    ohos:scale_mode="inside"
                    ohos:image_src="$media:icon"/>
                <TextField
                    ohos:height="match_content"
                    ohos:width="200vp"
                    ohos:left_padding="10vp"
                    ohos:right_padding="10vp"
                    ohos:text_size="26fp"
                    ohos:enabled="false"
                    ohos:background_element="$graphic:background_ability_text_field02"
                    ohos:hint="时间"/>
            </DirectionalLayout>
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:top_margin="20vp"
                ohos:orientation="horizontal">
                <Image
                    ohos:height="40vp"
                    ohos:width="40vp"
                    ohos:scale_mode="inside"
                    ohos:image_src="$media:icon"/>
                <TextField
                    ohos:height="match_content"
                    ohos:width="200vp"
                    ohos:left_padding="10vp"
                    ohos:right_padding="10vp"
                    ohos:text_size="26fp"
                    ohos:background_element="$graphic:background_ability_text_field02"
                    ohos:hint="地点"/>
            </DirectionalLayout>
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:top_margin="20vp"
                ohos:orientation="horizontal">
                <Image
                    ohos:height="40vp"
                    ohos:width="40vp"
                    ohos:scale_mode="inside"
                    ohos:image_src="$media:icon"/>
                <TextField
                    ohos:height="match_content"
                    ohos:width="200vp"
                    ohos:left_padding="10vp"
                    ohos:right_padding="10vp"
                    ohos:text_size="26fp"
                    ohos:background_element="$graphic:background_ability_text_field02"
                    ohos:hint="人物"/>
            </DirectionalLayout>
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:top_margin="20vp"
                ohos:orientation="horizontal">
                <Image
                    ohos:height="40vp"
                    ohos:width="40vp"
                    ohos:scale_mode="inside"
                    ohos:image_src="$media:icon"/>
                <TextField
                    ohos:height="match_content"
                    ohos:width="200vp"
                    ohos:left_padding="10vp"
                    ohos:right_padding="10vp"
                    ohos:text_size="26fp"
                    ohos:background_element="$graphic:background_ability_text_field02"
                    ohos:hint="金额"/>
            </DirectionalLayout>
            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:top_margin="20vp"
                ohos:orientation="horizontal">
                <Image
                    ohos:height="40vp"
                    ohos:width="40vp"
                    ohos:scale_mode="inside"
                    ohos:image_src="$media:icon"/>
                <TextField
                    ohos:height="match_content"
                    ohos:width="200vp"
                    ohos:left_padding="10vp"
                    ohos:right_padding="10vp"
                    ohos:text_size="26fp"
                    ohos:background_element="$graphic:background_ability_text_field02"
                    ohos:hint="关键词"/>
            </DirectionalLayout>

            <Button
                ohos:height="match_content"
                ohos:width="120vp"
                ohos:text_size="26fp"
                ohos:top_margin="30vp"
                ohos:background_element="$graphic:background_ability_button02"
                ohos:text="保存"/>

            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="我想查账>>>"
                ohos:text_size="20fp"
                ohos:top_margin="10vp"
                ohos:right_margin="5vp"
                ohos:layout_alignment="right"
                ohos:text_color="#FFD700"/>

        </DirectionalLayout>
    </DirectionalLayout>

</DirectionalLayout>
