<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:background_element="#E6E6FA"
    ohos:padding="15vp"
    ohos:orientation="vertical">

    <Image
        ohos:id="$+id:img_logo"
        ohos:height="120vp"
        ohos:width="120vp"
        ohos:background_element="$graphic:background_ability_image"
        ohos:image_src="$media:icon"/>

    <TextField
        ohos:id="$+id:tf_username"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:hint="请输入用户名"
        ohos:padding="5vp"
        ohos:background_element="$graphic:background_ability_text_field"
        ohos:top_margin="10vp"
        ohos:text_size="25fp"/>

    <TextField
        ohos:id="$+id:pwd"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:hint="请输入密码"
        ohos:padding="5vp"
        ohos:background_element="$graphic:background_ability_text_field"
        ohos:top_margin="10vp"
        ohos:text_size="25fp"/>

    <TextField
        ohos:id="$+id:pwd_confirm"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:hint="请再次输入密码"
        ohos:padding="5vp"
        ohos:background_element="$graphic:background_ability_text_field"
        ohos:top_margin="10vp"
        ohos:text_size="25fp"/>

    <TextField
        ohos:id="$+id:tf_phone"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:hint="请输入手机号"
        ohos:padding="5vp"
        ohos:background_element="$graphic:background_ability_text_field"
        ohos:top_margin="10vp"
        ohos:text_size="25fp"/>

    <Button
        ohos:id="$+id:btn_register"
        ohos:height="40vp"
        ohos:width="150vp"
        ohos:top_margin="10vp"
        ohos:text_size="25fp"
        ohos:background_element="$graphic:background_ability_button"
        ohos:text="注册"/>

    <Button
        ohos:id="$+id:btn_cancel"
        ohos:height="40vp"
        ohos:width="150vp"
        ohos:top_margin="10vp"
        ohos:text_size="25fp"
        ohos:background_element="$graphic:background_ability_button"
        ohos:text="取消"/>

</DirectionalLayout>